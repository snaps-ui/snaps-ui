{
  "name": "snaps-ui",
  "version": "0.0.0-development",
  "description": "snaps-ui monorepo, A beautifully crafted React design system powered by Ark UI and Panda",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev:web": "pnpm --filter website dev",
    "build:web": "pnpm --filter website build",
    "build:packages": "pnpm -r --filter='./packages/*' run build",
    "dev:storybook": "pnpm --filter storybook storybook",
    "build:storybook": "pnpm --filter storybook build-storybook",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch --onlyChanged",
    "commitlint": "commitlint --edit",
    "release": "pnpm run changeset:version && pnpm run build:packages && pnpm run publish",
    "publish": "pnpm --filter @snaps-ui /* publish --access public --tag latest",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "bugs": {
    "url": "https://github.com/snaps-ui/snaps-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/snaps-ui/snaps-ui"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "keywords": [
    "snaps-ui",
    "react",
    "ui",
    "ark-ui",
    "Panda Css",
    "design-system",
    "react-components",
    "accessible",
    "uikit",
    "components",
    "library"
  ],
  "author": "Justice Chimobi <chimobi.justice@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=20.x"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-storybook": "^9.1.6",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "3.6.2",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "tsup": "^8.5.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
