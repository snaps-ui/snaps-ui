{
  "name": "@snaps-ui/system",
  "version": "0.0.0-development",
  "private": false,
  "description": "snaps-ui system",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "snapsui": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./colors": {
      "snapsui": "./src/colors.ts",
      "types": "./dist/colors.d.ts",
      "import": "./dist/colors.js",
      "require": "./dist/colors.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf --no-glob ./dist",
    "build:tsup": "NODE_OPTIONS='--max-old-space-size=16384' tsup --config tsup.config.ts ",
    "build:types": "tsc --emitDeclarationOnly --outDir dist --project tsconfig.json",
    "prebuild": "pnpm clean",
    "build": "tsc --outDir dist --project tsconfig.json",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx --config ../../eslint.config.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/snaps-ui/snaps-ui",
    "directory": "packages/system"
  },
  "keywords": [
    "snaps-ui",
    "react",
    "ui",
    "chakra-ui",
    "theme",
    "design-system",
    "react-components",
    "accessible",
    "uikit",
    "components",
    "library",
    "emotion"
  ],
  "author": "Justice Chimobi <chimobi.justice@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.15.0",
  "peerDependencies": {
    "@chakra-ui/react": "^3.26.0",
    "@emotion/react": "^11",
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
