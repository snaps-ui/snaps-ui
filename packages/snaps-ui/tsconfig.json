{
    "compilerOptions": {
      "lib": ["DOM", "ESNext"],
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "bundler",
      "jsx": "react-jsx",
      "baseUrl": ".",
      "customConditions": ["snapsui"],
      "incremental": true,
      "tsBuildInfoFile": "dist/.tsbuildinfo.json",
      "declaration": true,
      "emitDeclarationOnly": false,
      "allowImportingTsExtensions": true,
      "rewriteRelativeImportExtensions": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": [
      "**/node_modules",
      "**/*.spec.ts",
      "**/*.spec.tsx",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*/*.stories.tsx"
    ]
  }